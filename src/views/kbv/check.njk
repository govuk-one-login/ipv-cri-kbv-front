{% extends "base-form.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "components/onPageLoad/macro.njk" import ga4OnPageLoad %}
{% set hmpoPageKey = "check" %}
{% set gtmJourney = "kbv - start" %}

{% block mainContent %}

<h1 id="header" class="govuk-heading-l">{{translate("pages.check.title")}}</h1>

{% call hmpoForm(ctx) %}

{{ hmpoHtml(translate("pages.check.content")) }}

{{ govukDetails({
summaryText: translate("pages.check.details.title"),
html: hmpoHtml(translate("pages.check.details.content"))
}) }}

{{ hmpoSubmit(ctx, {attributes: {"data-nav": true, "data-link": "/undefined"}, text: translate("buttons.next")}) }}

{% endcall %}

{{ ga4OnPageLoad({
  nonce: cspNonce,
  statusCode: '200',
  englishPageTitle: 'pages.check.title' | translate,
  taxonomyLevel1: 'web cri',
  taxonomyLevel2: 'kbv',
  contentId: 'undefined',
  loggedInStatus: true,
  dynamic: false
}) }}

{% endblock %}
